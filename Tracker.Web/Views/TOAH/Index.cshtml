@model IEnumerable<Tracker.Web.Models.LLInventoryView3>

@{
    ViewBag.Title = "All Inventory";
}

<head>
        <title>Customization of Editable DataTable</title>
        <link href="@Url.Content("~/Content/dataTables/demo_table.css")" 
              rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/dataTables/demo_table_jui.css")" 
              rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" 
              rel="stylesheet" type="text/css" media="all" />
        <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.7.2.custom.css")" 
              rel="stylesheet" type="text/css" media="all" />
        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" 
              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" 
              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.jeditable.js")" 
              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.js")" 
              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.js")" 
              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dataTables.editable.js")" 
              type="text/javascript"></script>
        @RenderSection("head", required: false);
    </head>
    
<h2>LL Inventory</h2>

<table id="toah" class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
        <th width="10%">
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestedItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory4)
        </th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td width="10%">
            @Html.DisplayFor(modelItem => item.OrderId)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.RequestDate)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.RequestedItems)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory1)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory2)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory3)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory4)
        </td> 
    </tr>
}
</tbody>

</table>

<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">

<!-- jQuery -->
<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>

<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
</script>

<script type="text/javascript" charset="utf8">
        var jquery = jQuery.noConflict();
      jquery(document).ready(function () {
      jquery('#toah').dataTable().makeEditable();
});
</script>