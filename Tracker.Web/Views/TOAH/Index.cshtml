@model IEnumerable<Tracker.Web.Models.LLInventoryView3>

@{
    ViewBag.Title = "All Inventory";
}

<head>
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">

    <!-- jQuery -->
    <script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
    </script>

    <script type="text/javascript" charset="utf8">
        var jquery = jQuery.noConflict();
        jquery(document).ready(function () {
        jquery('#toah').dataTable();
        jquery('#example').dataTable( {
            "processing": true,
            "ajax": {
            "url": "/TOAH/table",
            "type": "POST"
            },
            "columns": [
            { "data": "DT_RowId" },
            { "data": "OrderId" },
            { "data": "OrderDate" },
            { "data": "RequestDate" },
            { "data": "RequestedItems" },
            { "data": "Inventory1" },
            { "data": "Inventory2" },
            { "data": "Inventory3" },
            { "data": "Inventory4" }
        ]
        });
        $('#example').on( 'click', 'tbody td:not(:first-child)', function (e) {
        editor.inline( this );
    } );
 
    $('#example').DataTable( {
        dom: "Bfrtip",
        ajax: "../php/staff.php",
        order: [[ 1, 'asc' ]],
        columns: [
            {
                data: null,
                defaultContent: '',
                className: 'select-checkbox',
                orderable: false
            },
            { data: "first_name" },
            { data: "last_name" },
            { data: "position" },
            { data: "office" },
            { data: "start_date" },
            { data: "salary", render: $.fn.dataTable.render.number( ',', '.', 0, '$' ) }
        ],
        select: {
            style:    'os',
            selector: 'td:first-child'
        },
        buttons: [
            { extend: "create", editor: editor },
            { extend: "edit",   editor: editor },
            { extend: "remove", editor: editor }
        ]
    } );
    });
    
</script>

</head>    
<h2>LL Inventorys</h2>
<table id="example" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>DT_RowId</th>
                <th>OrderId</th>
                <th>OrderDate</th>
                <th>RequestDate</th>
                <th>RequestedItems</th>
                <th>Inventory1</th>
                <th>Inventory2</th>
                <th>Inventory3</th>
                <th>Inventory4</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>DT_RowId</th>
                <th>OrderId</th>
                <th>OrderDate</th>
                <th>RequestDate</th>
                <th>RequestedItems</th>
                <th>Inventory1</th>
                <th>Inventory2</th>
                <th>Inventory3</th>
                <th>Inventory4</th>
            </tr>
        </tfoot>
    </table>


<table id="toah" class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
        <th width="10%">
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestedItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory4)
        </th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td width="10%">
            @Html.DisplayFor(modelItem => item.OrderId)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.RequestDate)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.RequestedItems)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory1)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory2)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory3)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Inventory4)
        </td> 
    </tr>
}
</tbody>


</table>
